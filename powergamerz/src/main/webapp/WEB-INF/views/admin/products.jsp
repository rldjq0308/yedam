	<!-- Products Start -->
	<div class="container mt-5">
      <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-products">
            <div class="tm-product-table-container">
              <table class="table table-hover tm-table-small tm-product-table">
                <thead>
                  <tr>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">GAME NAME</th>
                    <th scope="col">Developer</th>
                    <th scope="col">Price</th>
                    <th scope="col">RELEASE DATE</th>
                    <th scope="col">&nbsp;</th>
                  </tr>
                </thead>
                <tbody>
                  <c:forEach items="${games}" var="g">
	                <tr onclick="selectProduct('${g.gameId}')">
                    <th scope="row"><input type="checkbox" /></th>
                    <td class="tm-product-name"><a href="editgame.do" style="color: white">${g.gameName}</a></td>
                    <td>${g.gameDeveloper}</td>
                    <td>${g.gamePrice}</td>
                    <td>${g.gameReleaseDate}</td>
                    <td>
                      <a href="gamedelete.do" class="tm-product-delete-link">
                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                      </a>
   	                </td>
	                </tr>
                  </c:forEach>
                </tbody>
              </table>
            </div>
            <div>
            	<form id="gamefrm" method="post">
            		<input type="hidden" id="gameId" name="gameId">
            	</form>
            </div>
            <!-- table container -->
            <a
              href="addproduct.do"
              class="btn btn-primary btn-block text-uppercase mb-3">Add new product</a>
